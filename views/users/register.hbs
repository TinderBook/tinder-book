<section class="container ">
  <h2 class="mb-3">Register</h2>
  <form action="/register" method="POST">

    <div class="d-flex justify-content-center mb-5">
      <div style="width: 100%; max-width: 500px;">

        {{!--NAME--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-user"></i></span>
          <input type="text" name="name" class="form-control {{#if errors.name}} is-invalid {{/if}}" placeholder="name"
            aria-label="Name" value="{{user.name}}">
          {{#if errors.name}}<div class="invalid-feedback fs-6">{{errors.name}}</div>{{/if}}
        </div>

        {{!--date of birth--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-calendar"></i></span>
          <input type="date" name="dateOfBirth" class="form-control {{#if errors.dateOfBirth}} is-invalid {{/if}}"
            placeholder="Date of Birth" aria-label="Date of Birth" value="{{user.dateOfBirth}}">
          {{#if errors.dateOfBirth}}<div class="invalid-feedback fs-6">{{errors.dateOfBirth}}</div>{{/if}}
        </div>

        {{!--gender--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-venus-mars"></i></span>
          <select name="gender" class="form-select {{#if errors.gender}} is-invalid {{/if}}">
            <option value="" disabled {{#unless user.gender}}selected{{/unless}}>Select your gender
            </option>
            <option value="male" {{#if (eq user.gender "male" )}}selected{{/if}}>Male</option>
            <option value="female" {{#if (eq user.gender "female" )}}selected{{/if}}>Female</option>
          </select>
          {{#if errors.gender}} <div class="invalid-feedback fs-6">{{errors.gender}}</div>{{/if}}
        </div>


        {{!--email--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-envelope"></i></span>
          <input type="text" name="email" class="form-control {{#if errors.email}} is-invalid {{/if}}"
            placeholder="email" aria-label="Name" value="{{user.email}}">
          {{#if errors.email}}<div class="invalid-feedback fs-6">{{errors.email}}</div>{{/if}}
        </div>

        {{!--username--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-tag"></i></span>
          <input type="text" name="username" class="form-control {{#if errors.username}} is-invalid {{/if}}"
            placeholder="username" aria-label="Name" value="{{user.username}}">
          {{#if errors.username}}<div class="invalid-feedback fs-6">{{errors.username}}</div>{{/if}}
        </div>

        {{!--password--}}
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
          <input type="password" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}}"
            placeholder="Enter your password" aria-label="Password">
          {{#if errors.password}}<div class="invalid-feedback fs-6">{{errors.password}}</div>{{/if}}
        </div>
      </div>
    </div>

    {{!-- edit books --}}
<section class="row gallery mt-4">
    {{#each books as |book|}}
    <div class="col-2 gallery-item">
        <div class="book-container">
            <a href="{{book.coverImage}}" data-lightbox="gallery" data-title="{{book.title}}">
                <img src="{{book.coverImage}}" class="img-fluid" alt="{{book.title}}">
            </a>
            <div class="custom-control custom-checkbox book-checkbox">
                <input type="checkbox" class="custom-control-input" name="likedBooks" value="{{book._id}}" id="book-{{book.id}}">
                <label class="custom-control-label" for="book-{{book.id}}"></label>
            </div>
        </div>
    </div>
    {{/each}}
</section>



<div class="d-flex justify-content-center mt-2 mb-3">
    <button class="btn btn-primary mx-auto" style="width: 200px;">Register</button>
</div>



  </form>
</section>