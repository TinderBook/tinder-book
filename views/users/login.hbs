<h1>User Login</h1><div class="row justify-content-center">
    <div class="col-12 col-md-3">
        <h1 class="mb-3">Login</h1>
        <div class="card">
            <div class="card-body">

                {{#if info}}<div class="alert alert-primary" role="alert">{{ info }}</div>{{/if}}

                <form action="/login" method="post">

                    {{!--USERNAME--}}
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa fa-fw fa-tag"></i></span>
                        <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="Username" aria-label="Name" value="{{user.username}}">
                        {{#if errors.username}} <div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
                    </div>

                    {{!--PASSWORD--}}
                     <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
                        <input type="text" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}}" placeholder="password" aria-label="Name">
                        {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
                    </div>

                    <div class="d-grip gap-2 mt-2" >
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>