<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <h1 class="mb-4 text-center" style="font-size: 2.5rem; color:">Inicia y Descubre</h1>
            <div class="card shadow-lg p-4">
                <div class="card-body">

                    {{#if info}}
                    <div class="alert alert-primary" role="alert">
                        {{ info }}
                    </div>
                    {{/if}}

                    <form action="/login" method="post">

                        {{!--USERNAME--}}
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fa fa-fw fa-tag"></i></span>
                            <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="Nombre de usuario" aria-label="Name" value="{{user.username}}">
                            {{#if errors.username}} 
                            <div class="invalid-feedback fs-6">{{ errors.username }}</div>
                            {{/if}}
                        </div>

                        {{!--PASSWORD--}}
                        <div class="input-group mb-4">
                            <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
                            <input type="password" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}} " placeholder="Contraseña" aria-label="Password">
                            {{#if errors.password}}
                            <div class="invalid-feedback fs-6">{{errors.password}}</div>
                            {{/if}}
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary" style="width: 200px;">Iniciar sesión</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
