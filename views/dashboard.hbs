<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            {{#if messages.success}}
            <div class="alert alert-success">{{messages.success}}</div>
            {{/if}}
            {{#each users as |user|}}
            <div class="user-container mb-5">
                <div class="text-center">
                    <img src="{{user.avatarUrl}}" alt="Avatar" class="rounded-circle" width="150">
                    <h2 class="mt-2">{{user.username}}</h2>
                    <h5><i>{{user.description}}</i></h5>
                    <!-- Aquí está el botón de "Like" -->
                <form action="/like/{{user._id}}" method="post" class="mt-3">
                    {{#if user.isLiked}}
                    <input type="hidden" name="action" value="unlike">
                    <button type="submit" class="btn btn-danger btn-sm">Unlike</button>
                    {{else}}
                    <input type="hidden" name="action" value="like">
                    <button type="submit" class="btn btn-primary btn-sm">Like</button>
                    {{/if}}
                </form>

                </div>
                {{!-- <hr> --}}
                 <h3 class="mb-4">Liked Books:</h3>
            <section class="d-flex flex-wrap">
                {{#each user.likedBooks as |book|}}
                    <img src="{{book.coverImage}}" class="w-50" alt="{{book.coverImage}}">
                {{/each}}
            </section>
            </div>
            {{/each}}

        </div>
    </div>
</div>